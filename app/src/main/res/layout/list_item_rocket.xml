<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_16"
    android:layout_marginStart="@dimen/margin_16"
    android:layout_marginEnd="@dimen/margin_16"
    android:background="@color/bottomNavColor"
    app:cardCornerRadius="@dimen/dimen_4"
    app:cardElevation="@dimen/dimen_4">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottomNavColor">

        <ImageView
            android:id="@+id/imvRocket"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rocket_height"
            android:scaleType="fitXY"
            tools:srcCompat="@color/iconColor" />

        <TextView
            android:id="@+id/txvRocketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imvRocket"
            tools:text="Falcon 1" />

        <TextView
            android:id="@+id/txvRocketDescription"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_16"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txvRocketName"
            tools:text="Lorem Ipsum Ispum Lorem" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
